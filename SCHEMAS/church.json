{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Church",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique church identifier"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255,
      "description": "Official name of the church"
    },
    "denomination": {
      "type": "string",
      "enum": [
        "catholic",
        "protestant",
        "orthodox",
        "baptist",
        "methodist",
        "presbyterian",
        "pentecostal",
        "lutheran",
        "anglican",
        "evangelical",
        "non_denominational",
        "other"
      ],
      "description": "Christian denomination"
    },
    "description": {
      "type": ["string", "null"],
      "maxLength": 2000,
      "description": "Church description and mission"
    },
    "website": {
      "type": ["string", "null"],
      "format": "uri",
      "description": "Church website URL"
    },
    "phone": {
      "type": ["string", "null"],
      "pattern": "^\\+?[1-9]\\d{1,14}$",
      "description": "Church phone number"
    },
    "email": {
      "type": ["string", "null"],
      "format": "email",
      "description": "Church contact email"
    },
    "address": {
      "type": "object",
      "properties": {
        "street": { "type": "string" },
        "city": { "type": "string" },
        "state": { "type": "string" },
        "postal_code": { "type": "string" },
        "country": { "type": "string" }
      },
      "required": ["street", "city", "state", "country"],
      "description": "Physical address of the church"
    },
    "location": {
      "type": "object",
      "properties": {
        "lat": { "type": "number", "minimum": -90, "maximum": 90 },
        "lng": { "type": "number", "minimum": -180, "maximum": 180 },
        "geohash": { "type": "string" }
      },
      "required": ["lat", "lng"],
      "description": "Geographic coordinates"
    },
    "service_times": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "day": {
            "type": "string",
            "enum": ["sunday", "monday", "tuesday", "wednesday", "thursday", "friday", "saturday"]
          },
          "time": { "type": "string", "pattern": "^([0-1]?[0-9]|2[0-3]):[0-5][0-9]$" },
          "service_type": {
            "type": "string",
            "enum": ["worship", "prayer", "bible_study", "youth", "children", "special"]
          },
          "description": { "type": "string" }
        },
        "required": ["day", "time", "service_type"]
      },
      "description": "Regular service times"
    },
    "pastor_name": {
      "type": ["string", "null"],
      "description": "Name of the lead pastor"
    },
    "membership_size": {
      "type": ["string", "null"],
      "enum": ["small", "medium", "large", "megachurch"],
      "description": "Approximate size of congregation"
    },
    "languages": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Languages used in services"
    },
    "facilities": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["parking", "nursery", "wheelchair_accessible", "youth_center", "gym", "kitchen", "bookstore"]
      },
      "description": "Available facilities"
    },
    "photo_urls": {
      "type": "array",
      "items": { "type": "string", "format": "uri" },
      "description": "Church photos"
    },
    "verification_status": {
      "type": "string",
      "enum": ["pending", "verified", "rejected"],
      "default": "pending",
      "description": "Church verification status"
    },
    "verified_at": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "When the church was verified"
    },
    "verified_by": {
      "type": ["string", "null"],
      "description": "ID of admin who verified the church"
    },
    "is_active": {
      "type": "boolean",
      "default": true,
      "description": "Whether the church is active and accepting members"
    },
    "social_media": {
      "type": "object",
      "properties": {
        "facebook": { "type": "string", "format": "uri" },
        "instagram": { "type": "string", "format": "uri" },
        "twitter": { "type": "string", "format": "uri" },
        "youtube": { "type": "string", "format": "uri" }
      },
      "description": "Social media links"
    },
    "created_by": {
      "type": ["string", "null"],
      "description": "ID of user who added this church"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "When the church record was created"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "When the church was last updated"
    }
  },
  "required": [
    "id",
    "name",
    "denomination",
    "address",
    "location",
    "verification_status",
    "is_active",
    "created_at",
    "updated_at"
  ],
  "additionalProperties": false
}