{
  "title": "Invite",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the invite"
    },
    "code": {
      "type": "string",
      "pattern": "^[A-Z0-9]{10,16}$",
      "description": "Short, URL-safe invite code (10-16 uppercase alphanumeric characters)"
    },
    "email": {
      "type": ["string", "null"],
      "format": "email",
      "description": "Optional email address this invite is bound to"
    },
    "domain": {
      "type": ["string", "null"],
      "pattern": "^[a-zA-Z0-9.-]+\\.[a-zA-Z]{2,}$",
      "description": "Optional domain this invite is bound to (e.g., 'church.org')"
    },
    "max_uses": {
      "type": "integer",
      "minimum": 1,
      "maximum": 1000,
      "default": 1,
      "description": "Maximum number of times this invite can be used"
    },
    "uses": {
      "type": "integer",
      "minimum": 0,
      "default": 0,
      "description": "Current number of times this invite has been used"
    },
    "expires_at": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Optional expiration date and time"
    },
    "status": {
      "type": "string",
      "enum": ["active", "revoked", "expired"],
      "default": "active",
      "description": "Current status of the invite"
    },
    "notes": {
      "type": "string",
      "maxLength": 500,
      "description": "Optional notes about this invite"
    },
    "created_by": {
      "type": "string",
      "description": "ID of the admin who created this invite"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "When the invite was created"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "When the invite was last modified"
    }
  },
  "required": ["id", "code", "max_uses", "status", "created_by", "created_at"],
  "additionalProperties": false
}